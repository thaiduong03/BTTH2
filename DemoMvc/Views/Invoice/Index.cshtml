@model DemoMVC.Models.InvoiceModel

<h2>Tính tiền hóa đơn</h2>

<form method="post">
    <label>Số lượng:</label>
    <input type="number" name="Quantity" required />

    <label>Đơn giá:</label>
    <input type="number" step="0.01" name="Price" required />

    <button type="submit">Tính tổng tiền</button>
</form>

@if (ViewBag.TotalPrice != null)
{
    <h3>Tổng tiền hóa đơn: @ViewBag.TotalPrice VNĐ</h3>
}
